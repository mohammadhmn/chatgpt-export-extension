{
  "manifest_version": 3,
  "name": "ChatGPT Chat Exporter",
  "version": "1.1.0",
  "description": "Export ChatGPT chats to JSON files named by chat title.",
  "action": {
    "default_title": "Export ChatGPT chats",
    "default_popup": "ui/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "ui/options.html",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["https://chatgpt.com/*", "https://chat.openai.com/*"]
}
